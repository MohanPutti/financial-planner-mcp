{
  "name": "@mohanputti/financial-planner-mcp",
  "version": "1.0.2",
  "description": "MCP server for financial planning using Scripbox's proven financial planning algorithms",
  "license": "MIT",
  "author": "mohan.putti",
  "type": "module",
  "bin": "./build/index.js",
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "financial-planning",
    "scripbox",
    "sip-calculator",
    "investment-planning",
    "ai-tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MohanPutti/financial-planner-mcp.git"
  },
  "homepage": "https://github.com/MohanPutti/financial-planner-mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "dev": "npm run build && node build/index.js",
    "watch": "tsc --watch",
    "deploy": "npm publish --access public",
    "test": "node test/validate-api.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.0",
    "@mohanputti/financial-planner-mcp": "^1.0.1",
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^3.3.2",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
